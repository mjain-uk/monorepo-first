{
    "compilerOptions": {
      "target": "ESNext",
      "module": "ESNext",
      "moduleResolution": "node",
      "jsx": "react-jsx", // Ensure this line is present
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "strict": true,
      "baseUrl": ".",
      "paths": {
        "@sample-platform/styled/*": ["../styled/styled-system/*"]
      }
    },
    "include": ["src"],
    "exclude": ["node_modules", "dist"]
  }